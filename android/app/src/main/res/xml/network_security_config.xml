<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disable cleartext traffic for all domains by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Domain-specific configuration for HZZO -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ezdravstveno.hzzo.hr</domain>
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
